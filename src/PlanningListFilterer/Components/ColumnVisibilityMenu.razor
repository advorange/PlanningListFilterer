@typeparam T
@inherits BaseGridMenu<T>

@inject ColumnSettingsService ColumnSettingsService

@{
	ChildContent =
	@<MudGrid Class="filter-selection-grid">
		<MudItem xs="12">
			<MudStack Spacing="0">
				@foreach (var column in Columns)
				{
					<MudCheckBox T="bool" Label="@column.Title" Size="@Size.Small"
								 Disabled="@(column.Hideable == false)"
								 Checked="@(!column.Hidden)"
								 CheckedChanged="@(x => OnCheckedChanged(column, x))" />
				}
			</MudStack>
		</MudItem>
		<MudItem xs="12" Class="d-flex justify-end">
			<MudButton OnClick="@EnableAll">Enable All</MudButton>
			<MudButton OnClick="@DisableAll">Disable All</MudButton>
			<MudSpacer />
			<MudButton OnClick="@RestoreDefault">Restore Default</MudButton>
		</MudItem>
	</MudGrid>;
}

@{
	base.BuildRenderTree(__builder);
}