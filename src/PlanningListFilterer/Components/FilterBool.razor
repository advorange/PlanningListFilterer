<MudCheckBox T="bool" Color="Color.Primary" UnCheckedColor="Color.Default"
			 Checked="@Source.Value" CheckedChanged="@Source.SetValue">
	@ChildContent
</MudCheckBox>

@code {
	[Parameter]
	public AnilistFilterBool Source { get; set; } = null!;
	[Parameter]
	public RenderFragment ChildContent { get; set; } = null!;
}
