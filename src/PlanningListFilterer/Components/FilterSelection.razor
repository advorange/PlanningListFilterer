@typeparam T

<MudGrid Class="filter-selection-grid">
	<MudItem xs="12">
		<MudStack Class="filter-selection-stack" Spacing="0">
			<Virtualize Items="@Options">
				<MudCheckBox T="bool" Label="@context" Size="@Size.Small"
							 Value="@(SelectedItems.Contains(context))"
							 ValueChanged="@(x => OnCheckedChanged(context, x))" />
			</Virtualize>
		</MudStack>
	</MudItem>
	<MudItem xs="12" Class="d-flex justify-end">
		<MudButton OnClick="@Clear">Clear</MudButton>
	</MudItem>
</MudGrid>