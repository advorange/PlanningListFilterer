@typeparam T

@inject ColumnSettingsService ColumnSettingsService
@inject ListSettingsService ListSettingsService

<MudButton Color="Color.Primary" OnClick="@OpenMenu">
	Settings
</MudButton>
<MudOverlay Visible="@IsMenuOpen" OnClick="@CloseMenu" />
<MudPopover Class="pa-4" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight"
			Open="@IsMenuOpen">
	<MudExpansionPanels Dense="true" DisableBorders="true" 
						Class="filter-selection-grid" Elevation="0">
		<MudExpansionPanel Text="List Settings" IsInitiallyExpanded="true">
			<MudStack Spacing="0">
				<MudCheckBox T="bool" Dense="true" Size="@Size.Small"
							 Label="Enable friend scores (requires reloading list)"
							 Checked="@ListSettings.EnableFriendScores"
							 CheckedChanged="@ListFriendScoresChanged" />
				<MudCheckBox T="bool" Dense="true" Size="@Size.Small"
							 Label="Automatically toggle on friend score columns when friend scores are on"
							 @bind-Checked="@ListSettings.AutomaticallyToggleFriendScoreColumns"
							 @bind-Checked:after="@SaveAndUpdateUI" />
				<MudCheckBox T="bool" Dense="true" Size="@Size.Small"
							 Label="Automatically toggle off global score columns when friend scores are on"
							 @bind-Checked="@ListSettings.AutomaticallyToggleGlobalScoreColumns"
							 @bind-Checked:after="@SaveAndUpdateUI" />
			</MudStack>
		</MudExpansionPanel>
		<MudExpansionPanel Text="Column Settings">
			<MudStack Spacing="0">
				@foreach (var column in Columns.OrderBy(x => x.Title))
				{
					<MudCheckBox T="bool" Dense="true" Size="@Size.Small"
								 Label="@column.Title"
								 Disabled="@(column.Hideable == false)"
								 Checked="@(!column.Hidden)"
								 CheckedChanged="@(x => ColumnsChanged(column, x))" />
				}
			</MudStack>
			<MudItem xs="12" Class="d-flex justify-end">
				<MudButton OnClick="@ColumnsEnableAll">Enable All</MudButton>
				<MudButton OnClick="@ColumnsDisableAll">Disable All</MudButton>
				<MudSpacer />
				<MudButton OnClick="@ColumnsRestoreDefault">Restore Default</MudButton>
			</MudItem>
		</MudExpansionPanel>
	</MudExpansionPanels>
</MudPopover>