@typeparam T
@inherits BaseGridMenu<T>

@inject ColumnSettingsService ColumnSettingsService
@inject ListSettingsService ListSettingsService

@{
	ChildContent =
	@<MudItem xs="12">
		<MudStack Spacing="0">
			<MudCheckBox T="bool" Label="Friend Scores" Size="@Size.Small"
						 Checked="@Settings.EnableFriendScores"
						 CheckedChanged="@OnFriendScoresChanged" />
		</MudStack>
	</MudItem>;
}

@{
	base.BuildRenderTree(__builder);
}