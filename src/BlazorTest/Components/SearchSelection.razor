@typeparam T

<MudSelect Label="@(Label + " Select")" Variant="Variant.Outlined"
		   MultiSelection="true" Clearable="true"
		   T="T" SelectedValues="@Source.Values"
		   SelectedValuesChanged="@Source.SetValues">
	<Virtualize Items="@Source.Options">
		<MudSelectItem Value="@context">@context</MudSelectItem>
	</Virtualize>
</MudSelect>

@code {
	[Parameter]
	public string Label { get; set; } = null!;
	[Parameter]
	public AnilistSearchValues<T> Source { get; set; } = null!;
}